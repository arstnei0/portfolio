---
import { GITHUB_URL, SITE_URL, TWITTER_URL } from "~/config"
import A from "../primitive/A.astro"
import { ThemeToggleButton } from "../functional/ThemeToggleButton"
import { Hoverable } from "../decorative/cursor/Cursor"
---

<header>
	<div>
		<div id="avatar">
			<Hoverable round client:idle>
				<a href={SITE_URL} aria-label="My avatar">
					<img src="/avatar.webp" width="30" height="30" />
				</a>
			</Hoverable>
		</div>
		<div id="title-of-website">
			<A href={SITE_URL}>Zihan Chen</A>
		</div>
	</div>
	<div>
		<div id="github-link">
			<A target="_blank" href={GITHUB_URL}>Github</A>
		</div>
		<div id="twitter-link">
			<A target="_blank" href={TWITTER_URL}>Twitter</A>
		</div>
		<div id="theme-toggle"><ThemeToggleButton client:idle /></div>
	</div>
</header>

<style lang="sass">
	@import '../../styles/global.sass'

	header
		$margin-side: 1em
		margin-left: $margin-side
		margin-right: $margin-side
		margin-top: 0.1em
		margin-bottom: 1em
		display: flex
		justify-content: space-between
		align-items: center
		z-index: 300

		& > *
			display: flex

			& > *
				$margin: .8em
				margin-left: $margin
				margin-right: $margin

		& *
			color: $font-color-primary !important

	#title-of-website
		font-weight: 500
		font-size: 1.3em
</style>
